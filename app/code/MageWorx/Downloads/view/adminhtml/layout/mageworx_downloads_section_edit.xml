<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="MageWorx\Downloads\Block\Adminhtml\Section\Edit" name="mageworx_downloads_section_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="MageWorx\Downloads\Block\Adminhtml\Section\Edit\Tabs" name="mageworx_downloads_section_tabs">
                <block class="MageWorx\Downloads\Block\Adminhtml\Section\Edit\Tab\Main"
                       name="mageworx_downloads_section_edit_tab_main"
                />
                <block class="MageWorx\Downloads\Block\Adminhtml\Section\Edit\Tab\StoreSpecificData"
                       name="mageworx_downloads_section_edit_tab_store_specific_data"
                />
                <action method="addTab">
                    <argument name="name" xsi:type="string">main</argument>
                    <argument name="block" xsi:type="string">mageworx_downloads_section_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">section_label</argument>
                    <argument name="block" xsi:type="string">mageworx_downloads_section_edit_tab_store_specific_data</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
