<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <css src="Cart2Quote_Desk::css/style.css"/>
    </head>
    <body>
        <referenceContainer name="page.main.title">
            <block class="Magento\Framework\View\Element\Template" name="page.title.desk.customer.new.ticket" template="Cart2Quote_Desk::customer/ticket/list/new_ticket.phtml" ifconfig="desk_general/desk/enabled"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Cart2Quote\Desk\Block\Customer\Ticket\ListTicket" name="customer_ticket_list" template="customer/ticket/list.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
