<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Cart2Quote_Desk::config_ticket" title="Supportdesk Settings" sortOrder="60" />
                        <resource id="Cart2Quote_Email::ticket_deskemail" title="Supportdesk Email Settings" sortOrder="60" />
                    </resource>
                </resource>
                <resource id="Magento_Customer::customer" title="Customers" translate="title" sortOrder="40">
                    <resource id="Cart2Quote_Desk::ticket_view" title="Customer Supportdesk ticket view" sortOrder="60" />
                </resource>
            </resource>
        </resources>
    </acl>
</config>
