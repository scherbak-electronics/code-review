/** @var \Magento\Bundle\Block\Catalog\Product\View\Type\Bundle $block */
$product = $block->getProduct();
$options = $block->decorateArray($block->getOptions($product->getConfigureMode()));
?>

<?php if ($product->isSaleable() && count($options)): ?>
    <div class="bundle-options-container">
        <div class="product-options-wrapper">
            <div class="fieldset">
                <fieldset class="fieldset fieldset-bundle-options">
                    <?= $block->getChildHtml('product_info_bundle_options_top') ?>
                    <?php foreach ($options as $option): ?>
                        <?php if ($option->getSelections()): ?>
                            <?= $block->getOptionHtml($option) ?>
                        <?php endif; ?>
                    <?php endforeach; ?>
                </fieldset>
            </div>
        </div>
    </div>
<?php endif; ?>
